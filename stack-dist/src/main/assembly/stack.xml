<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>stack</id>
  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>/vert.x-${project.version}</baseDirectory>

  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/lib/</outputDirectory>
      <includes>
        <include>io.netty:netty-all</include>
        <include>com.fasterxml.jackson.core:jackson-core</include>
        <include>com.fasterxml.jackson.core:jackson-databind</include>
        <include>com.fasterxml.jackson.core:jackson-databind</include>
<!--
        <include>org.apache.directory.server:apacheds-protocol-dns</include>
        <include>org.slf4j:slf4j-api</include>
-->
        <include>io.vertx:vertx-core</include>
        <include>io.vertx:vertx-hazelcast</include>
        <include>io.vertx:vertx-js</include>
        <include>io.vertx:vertx-groovy</include>
        <include>org.codehaus.groovy:groovy-all</include>
        <include>io.vertx:vertx-java</include>
        <include>io.vertx:ext-*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/conf/</outputDirectory>
      <includes>
        <include>io.vertx:vertx-hazelcast</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>default-cluster.xml</include>
        </includes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/packaging</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <outputDirectory>/client</outputDirectory>
      <destName>vertxbus-${project.version}.js</destName>
      <source>src/main/client/vertxbus.js</source>
    </file>
  </files>

</assembly>